{
  "name": "@gadicc/openfigi",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Small typed API over OpenFIGI for better DX",
  "tasks": {
    "test": "deno test -A",
    "coverage": "deno task test --coverage && deno coverage --lcov --output=lcov.info ./coverage",
    "retrieve": "deno run -A scripts/retrieve.ts",
    "exchanges": "deno run -A scripts/exchanges.ts",
    "mic-map": "deno run -A scripts/mic_map.ts",
    "build:npm": "deno run -A scripts/build_npm.ts",
    "pre-commit": "deno check lib/openfigi.ts lib/exchanges.ts && deno lint && deno fmt --check"
  },
  "exports": {
    ".": "./lib/openfigi.ts",
    "./exchanges": "./lib/exchanges.ts"
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@gadicc/fetch-mock-cache": "jsr:@gadicc/fetch-mock-cache@^2.2.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "semantic-release": "npm:semantic-release@^24.2.9",
    "xlsx": "npm:xlsx@^0.18.5"
  },
  "lint": {
    "include": ["."],
    "exclude": ["npm/", "tests/fixtures/http", "data/"]
  },
  "fmt": {
    "include": ["."],
    "exclude": ["npm/", "tests/fixtures/http", "data/"]
  },
  "publish": {
    "exclude": ["tests"]
  }
}
